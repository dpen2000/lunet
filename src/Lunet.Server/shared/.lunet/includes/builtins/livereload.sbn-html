<script>
    (function() {
        var ws = new WebSocket("{{site.livereload_url}}");
        ws.onclose = function() {
            // console.log("livereload: websocket connection closed");
        };
        ws.onmessage = function(event) {
            // console.log("livereload: evt " + event.data);
            if (event.data === "reload") {
                location.reload();
            }
        };
    })();
</script>
